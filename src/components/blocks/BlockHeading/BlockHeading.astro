---
import Section from "@/layouts/Section.astro";
import type {BlockHeading} from "@/types/directusCollection";


const props = Astro.props as BlockHeading;
const {tagline, description, heading } = props;
---


<Section 
  fullWidth
  fullHeight
  class="flex flex-col px-4 py-24 items-center justify-center text-pretty"
>
  <div class='flex h-dvh justify-between flex-col' id="block-heading">
    <div>
      {tagline && (
        <p class="heading-tagline text-sm text-gray-500 uppercase tracking-wide">
          {tagline}
        </p>
      )}
      {heading && (
        <h1 class="heading-title text-5xl md:text-5xl lg:text-6xl xl:text-8xl leading-tight tracking-tight text-gray-900">
          {heading}
        </h1>
      )}
    </div>

    <div class="flex justify-center text-left items-left text-pretty md:justify-end">
      {description && (
        <p class="heading-description mt-4 text-lg text-gray-700 max-w-2xl">
          {description}
        </p>
      )}
    </div>
  </div>
  <script src='./BlockHeading.barba.ts' />
</Section>

