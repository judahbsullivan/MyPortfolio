---
import type { BlockRichtext } from '@/types/directusCollection';

const { id, alignment, tagline, headline, content } = Astro.props as BlockRichtext;

const layoutClasses: Record<string, string> = {
  left: 'text-left items-start',
  center: 'text-center items-center',
  right: 'text-right items-end',
};

const alignmentClass = layoutClasses[alignment ?? 'left'] ?? layoutClasses.left;
---

<section class="py-16 px-4 md:px-12 bg-white">
  <div class={`max-w-6xl mx-auto flex flex-col gap-8 ${alignmentClass}`} id={id}>
    <div class="w-full md:w-1/2 flex flex-col justify-center space-y-6">
      {tagline && (
        <p class="text-sm text-gray-500 uppercase tracking-wide">
          {tagline}
        </p>
      )}
      {headline && (
        <h1 class="text-6xl font-bold text-gray-900">
          {headline}
        </h1>
      )}
    </div>

    <div
      class="text-lg text-gray-700 prose prose-3xl prose-p:text-2xl"
      set:html={content ?? ''}
    />
  </div>
</section>

