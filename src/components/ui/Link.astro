---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"a"> {
  className?: string;
  href?: string;
  label?: string;
}

const { className, href, label, class: cls, ...rest } = Astro.props as any;
const combinedClass = [cls, className].filter(Boolean).join(' ');
---

<a 
  href={href}
  class={combinedClass}
  {...rest}
>
  {label ? label : <slot />}
</a>
